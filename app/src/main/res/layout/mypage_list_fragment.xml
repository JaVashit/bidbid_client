<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#eeeeee"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:src="@mipmap/mypagelogo"
            android:layout_marginLeft="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            >
            <TextView
                android:id="@+id/mypage_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="김가영(010-0000-0000)"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/mypage_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사용자 id,facebook의 경우 e-mail "
                android:textSize="12sp"
                android:textColor="#939598"/>
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_mypage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"

        >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
