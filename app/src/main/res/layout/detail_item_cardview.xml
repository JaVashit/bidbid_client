<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id = "@+id/detail_cardView"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_margin = "4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/detail_ImageView"
                android:src="@drawable/food"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                />

            <RelativeLayout
                android:id="@+id/detail_second_relative"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_below="@id/detail_ImageView"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품이름"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:id="@+id/detail_item_name"
                    android:textColor="#A6A6A6"
                    android:layout_marginBottom="6dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_item_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/detail_layout_price"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최저입찰가"

                        android:textSize="23sp"
                        android:textColor="#FF0000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:layout_marginLeft="3dp"
                        android:id="@+id/detail_price"
                        android:textSize="17sp"
                        android:textColor="#000000"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_layout_price"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/detail_layout_remian_time"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/clock"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남은시간"
                        android:id="@+id/detail_time"
                        android:textSize="17sp"
                        android:textColor="#FF0000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="남음"
                        android:layout_marginLeft="3dp"

                        android:textSize="13sp"
                        android:textColor="#A6A6A6"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/detail_layout_remian_time"
                    android:layout_marginLeft="14dp"
                    android:layout_marginBottom="6dp"
                    android:id="@+id/detail_layout_people_su">
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/person"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:id="@+id/detail_people_su"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="명 참여중"
                        android:layout_below="@+id/detail_people_su"
                        android:layout_marginTop="5dp"
                        />

                </LinearLayout>
                <View
                    android:layout_width="320dp"
                    android:layout_height="1dip"
                    android:layout_marginBottom="0dp"
                    android:layout_below="@+id/detail_layout_people_su"
                    android:id="@+id/detail_view"
                    android:layout_marginTop="0dp"
                    android:background="#ededed"
                    android:layout_centerHorizontal="true"></View>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_below="@+id/detail_view"
                    >
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@mipmap/favorite"
                        android:id="@+id/detail_favorite_image"
                        />
                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/share"
                        />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>