<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id = "@+id/detail_cardView"
            android:layout_width="match_parent"
            android:layout_height="415dp"
            android:layout_margin = "4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/detail_ImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    />

                <RelativeLayout
                    android:id="@+id/detail_second_relative"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="#ffffff"

                    android:layout_alignParentRight="true"
                    android:layout_below="@id/detail_ImageView"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제품이름"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="18dp"
                        android:textSize="14sp"
                        android:id="@+id/detail_item_name"
                        android:textColor="#000000"
                        android:layout_marginBottom="6dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detail_item_name"
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/detail_layout_price"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최저입찰가"

                            android:textSize="18sp"
                            android:textColor="#FF0000"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가격"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/detail_price"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_layout_price"
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/detail_layout_remian_time"
                        >
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/clock"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="남은시간"
                            android:id="@+id/detail_time"
                            android:textSize="18sp"
                            android:textColor="#FF0000"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="남음"
                            android:layout_marginLeft="3dp"

                            android:textSize="16sp"
                            android:textColor="#000000"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_layout_remian_time"
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/detail_layout_remian_time1">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/detail_time"
                            android:id="@+id/item_layout_remain1"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/clock"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/detail_time_hour"
                                android:textSize="12sp"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="시간"
                                android:textSize="12sp"
                                android:layout_marginLeft="3dp"
                                android:id="@+id/remain_time2"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:id="@+id/detail_time_min"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="분"
                                android:textSize="12sp"
                                android:layout_marginLeft="3dp"
                                android:id="@+id/remain_time3"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:id="@+id/detail_time_sec"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="초"
                                android:textSize="12sp"
                                android:layout_marginLeft="3dp"
                                android:id="@+id/remain_time4"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   남음"
                                android:id="@+id/detail_time1"
                                android:textSize="12sp"
                                android:textColor="#cacaca"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/detail_layout_remian_time1"
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="14dp"
                        android:id="@+id/detail_layout_people_su">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@mipmap/joinperson"
                            android:layout_marginTop="6dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="12sp"
                            android:textColor="#939598"
                            android:id="@+id/detail_people_su"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="명 참여중"
                            android:textSize="12sp"
                            android:textColor="#939598"
                            android:layout_below="@+id/detail_people_su"
                            android:layout_marginTop="5dp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="324dp"
                        android:layout_height="1dip"
                        android:layout_marginBottom="0dp"
                        android:layout_below="@+id/detail_layout_people_su"
                        android:id="@+id/detail_view"
                        android:layout_marginTop="0dp"
                        android:background="#ededed"
                        android:layout_centerHorizontal="true"></View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/detail_image"
                        android:layout_below="@+id/detail_view"
                        >
                        <ImageView
                            android:id="@+id/detail_charge_image"
                            android:layout_width="16dp"
                            android:layout_height="16dp"

                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="3dp"
                            android:src="@mipmap/won" />
                        <TextView
                            android:id="@+id/detail_molra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toRightOf="@+id/detail_charge_image"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="0"/>
                        <TextView
                            android:id="@+id/detail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toRightOf="@+id/detail_molra"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="원 입찰중("/>
                        <TextView
                            android:id="@+id/detail_current_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toRightOf="@+id/detail_text"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toRightOf="@+id/detail_current_count"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="/3)"/>
                        <ImageView
                            android:id="@+id/detail_share_image"
                            android:layout_alignParentRight="true"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="18dp"
                            android:src="@mipmap/share"
                            />
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/favorite"
                            android:id="@+id/detail_favorite_image"
                            android:layout_toLeftOf="@id/detail_share_image"
                            />

                    </RelativeLayout>
                    <View
                        android:id="@+id/detail_view1"
                        android:layout_width="match_parent"
                        android:layout_height="10dip"
                        android:layout_below="@+id/detail_image"
                        android:background="#eeeeee">

                    </View>
                    <TextView
                        android:id="@+id/detail_infomation"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="11dp"
                        android:layout_below="@+id/detail_view1"
                        android:text="상세정보"
                        android:textSize="14sp"
                        android:textColor="#e42828"
                        android:layout_centerInParent="true"/>
                    <View
                        android:id="@+id/detail_view2"
                        android:layout_width="324dp"
                        android:layout_height="2dip"
                        android:layout_below="@+id/detail_infomation"
                        android:layout_centerHorizontal="true"
                        android:background="#e42828">

                    </View>
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>