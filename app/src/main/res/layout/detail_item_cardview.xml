<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="90dp">
        <android.support.v7.widget.CardView
            android:id = "@+id/detail_cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/detail_layout">
                 <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/detail_ImageView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    />

                <RelativeLayout
                    android:id="@+id/detail_second_relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"

                    android:layout_alignParentRight="true"
                    android:layout_below="@id/detail_ImageView"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="8dp">
                        <ImageView
                            android:id="@+id/detail_minmax_image"
                            android:layout_width="42dp"
                            android:layout_height="106dp"
                            android:src="@mipmap/minmaxbar" />
                        <TextView
                            android:id="@+id/detail_max_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/detail_minmax_image"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="5dp"
                            android:text="MAX"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/detail_max_price"
                            android:layout_below="@+id/detail_max_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/detail_minmax_image"
                            android:layout_marginBottom="23dp"
                            android:text="15000"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/detail_min_text"
                            android:layout_below="@+id/detail_max_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_toRightOf="@+id/detail_minmax_image"
                            android:text="MIN"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/detail_min_price"
                            android:layout_below="@+id/detail_min_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/detail_minmax_image"
                            android:text="15000"
                            android:textSize="10sp"/>


                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제품이름"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="18dp"
                        android:textSize="14sp"
                        android:id="@+id/detail_item_name"
                        android:textColor="#000000"
                        android:layout_marginBottom="6dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/detail_item_name"
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/detail_layout_price"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최저입찰가"
                            android:textSize="18sp"
                            android:textColor="#FF0000"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가격"
                            android:layout_marginLeft="3dp"
                            android:id="@+id/detail_price"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_layout_price"
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/detail_layout_remian_time"
                        >
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="6dp"
                            android:src="@mipmap/clock"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="남은시간"
                            android:id="@+id/detail_time"
                            android:textSize="18sp"
                            android:textColor="#FF0000"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="남음"
                            android:layout_marginLeft="3dp"

                            android:textSize="16sp"
                            android:textColor="#000000"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_layout_remian_time"
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="16dp"
                        android:id="@+id/detail_layout_remian_time1">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/detail_time"
                            android:id="@+id/item_layout_remain1"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@mipmap/clock"
                                android:layout_gravity="center"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/detail_time_hour"
                                android:textSize="12sp"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="시간"
                                android:textSize="12sp"
                                android:layout_marginLeft="3dp"
                                android:id="@+id/remain_time2"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:id="@+id/detail_time_min"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="분"
                                android:textSize="12sp"
                                android:layout_marginLeft="3dp"
                                android:id="@+id/remain_time3"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="12sp"
                                android:id="@+id/detail_time_sec"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="초"
                                android:textSize="12sp"
                                android:layout_marginLeft="3dp"
                                android:id="@+id/remain_time4"
                                android:textColor="#A6A6A6"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="   남음"
                                android:id="@+id/detail_time1"
                                android:textSize="12sp"
                                android:textColor="#cacaca"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:layout_below="@+id/detail_layout_remian_time1"
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="14dp"
                        android:id="@+id/detail_layout_people_su">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@mipmap/joinperson"
                            android:layout_marginTop="6dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="12sp"
                            android:textColor="#939598"
                            android:id="@+id/detail_people_su"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="명 참여중"
                            android:textSize="12sp"
                            android:textColor="#939598"
                            android:layout_below="@+id/detail_people_su"
                            android:layout_marginTop="5dp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_width="324dp"
                        android:layout_height="1dip"
                        android:layout_marginBottom="0dp"
                        android:layout_below="@+id/detail_layout_people_su"
                        android:id="@+id/detail_view"
                        android:layout_marginTop="0dp"
                        android:background="#ededed"
                        android:layout_centerHorizontal="true"></View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:id="@+id/detail_image"
                        android:layout_below="@+id/detail_view"
                        >
                        <ImageView
                            android:id="@+id/detail_charge_image"
                            android:layout_width="16dp"
                            android:layout_height="16dp"

                            android:layout_marginTop="16dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="3dp"
                            android:src="@mipmap/won" />
                        <TextView
                            android:id="@+id/detail_molra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toRightOf="@+id/detail_charge_image"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="0"/>
                        <TextView
                            android:id="@+id/detail_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toRightOf="@+id/detail_molra"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="원 입찰중("/>
                        <TextView
                            android:id="@+id/detail_current_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toRightOf="@+id/detail_text"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="16dp"
                            android:layout_toRightOf="@+id/detail_current_count"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:text="/3)"/>
                        <ImageView
                            android:id="@+id/detail_share_image"
                            android:layout_alignParentRight="true"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="18dp"
                            android:src="@mipmap/share"
                            />
                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@mipmap/favorite"
                            android:id="@+id/detail_favorite_image"
                            android:layout_toLeftOf="@id/detail_share_image"
                            />

                    </RelativeLayout>
                    <View
                        android:id="@+id/detail_view1"
                        android:layout_width="match_parent"
                        android:layout_height="10dip"
                        android:layout_below="@+id/detail_image"
                        android:background="#eeeeee">

                    </View>
                    <TextView
                        android:id="@+id/detail_infomation"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="11dp"
                        android:layout_below="@+id/detail_view1"
                        android:text="상품정보"
                        android:textSize="14sp"
                        android:textColor="#e42828"
                        android:layout_centerInParent="true"/>
                    <View
                        android:id="@+id/detail_view2"
                        android:layout_width="324dp"
                        android:layout_height="2dip"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@+id/detail_infomation"
                        android:layout_centerHorizontal="true"
                        android:background="#e42828">

                    </View>

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_view2">
                        <ImageView
                            android:id="@+id/detail_inform_image"
                            android:layout_width="match_parent"
                            android:layout_height="518dp"
                            android:scaleType="fitXY"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:src="@drawable/dgif"/>

                        <TextView
                            android:id="@+id/detail_inform_text"
                            android:layout_below="@+id/detail_inform_image"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginTop="11dp"
                            android:text="상세정보"
                            android:textSize="14sp"
                            android:textColor="#e42828"
                            android:layout_centerInParent="true"/>
                        <View
                            android:id="@+id/detail_inform_view"
                            android:layout_width="324dp"
                            android:layout_height="2dip"
                            android:layout_below="@+id/detail_inform_text"
                            android:layout_marginBottom="18dp"
                            android:layout_centerHorizontal="true"
                            android:background="#e42828">

                        </View>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="36dp"
                            android:orientation="vertical"
                            android:layout_below="@+id/detail_inform_view">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@mipmap/menu"
                                    android:layout_marginRight="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="메뉴:"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="피자,파스타 등"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@mipmap/won"
                                    android:layout_marginRight="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가격대:"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1만원"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2만원"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="대"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@mipmap/clock"
                                    android:layout_marginRight="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="영업시간:"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="08:00"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="~"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="23:00"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="22dp"
                                    android:text="휴무:"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="연중무휴"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@mipmap/call"
                                    android:layout_marginRight="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="전화번호:"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="02-333-3333"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@mipmap/park"
                                    android:layout_marginRight="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="주차:"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="있음"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/detail_inform_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@mipmap/location"
                                    android:layout_marginRight="8dp"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="주소:"
                                    android:textSize="12sp"
                                    android:textColor="#000000"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="서울시 서대문 256번지"
                                    android:textSize="12sp"
                                    android:textColor="#939598"/>
                            </LinearLayout>


                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>

</LinearLayout>