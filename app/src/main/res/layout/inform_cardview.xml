<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:orientation="horizontal">
       <ImageView
           android:layout_width="38dp"
           android:layout_height="48dp"
           android:src="@drawable/logo_mdpi"
           android:layout_marginLeft="18dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        >
        <TextView
            android:id="@+id/e_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="김가영(010-0000-0000)"
            android:textSize="14sp"
            android:textColor="#000000"/>


        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="안뇽하세요email이애오"
            android:textSize="12sp"
            android:textColor="#939598"/>


    </LinearLayout>
   </LinearLayout>

    <android.support.v7.widget.CardView
        android:id = "@+id/detail_cardView"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_margin = "4dp"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:id="@+id/detail_ImageView"
                android:src="@drawable/food"
                android:layout_centerHorizontal="true"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:background="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/detail_ImageView"
                >
                <View
                    android:id="@+id/info_view1"
                    android:layout_width="340dp"
                    android:layout_height="1dip"
                    android:layout_marginTop="16dp"
                    android:background="#ededed"
                    android:layout_centerHorizontal="true"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품이름"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="14sp"
                    android:id="@+id/detail_item_name"
                    android:layout_below="@+id/info_view1"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_item_name"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="18dp"
                    android:id="@+id/detail_layout_price"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입찰가"
                        android:textSize="18sp"
                        android:textColor="#e42828"
                        />
                    <TextView
                        android:id="@+id/info_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:layout_marginLeft="3dp"

                        android:textSize="15sp"
                        android:textColor="#e42828"
                        />


                </LinearLayout>
                <View
                    android:id="@+id/info_view2"
                    android:layout_below="@+id/detail_layout_price"
                    android:layout_width="340dp"
                    android:layout_height="1dip"
                    android:layout_marginBottom="16dp"
                    android:background="#ededed"
                    android:layout_centerHorizontal="true"></View>





            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>