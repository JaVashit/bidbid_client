<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/search_relative"
        >
        <RelativeLayout
            android:id="@+id/informLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            >



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/search"/>

                <EditText
                    android:background="@null"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:hint="검색어를 입력하세요"

                    android:id="@+id/search_edit_text"
                    android:textColorHint="#939598"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>
            <Button
                android:layout_marginRight="18dp"
                android:id="@+id/search_button"
                android:background="@drawable/redcircleshape"
                android:layout_width="78dp"
                android:layout_height="26dp"
                android:text="검색"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:paddingLeft="18dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/search_relative"
        android:id="@+id/suggest_star"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@mipmap/star"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="추천 검색어"
            android:textColor="#e42828"
            android:gravity="center_vertical"
            android:textSize="20sp"
            />
    </LinearLayout>
    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="#ededed"
        android:layout_centerHorizontal="true"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/suggest_star"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            >
        </LinearLayout>
        <GridView
            android:id="@+id/gridView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:columnWidth="100dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:gravity="center">
        </GridView>
    </RelativeLayout>

</RelativeLayout>

