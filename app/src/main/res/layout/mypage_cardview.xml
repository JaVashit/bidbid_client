<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id = "@+id/mypage_cardView"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_margin = "4dp"
        android:background="#ffffff"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/mypage_ImageView"
                android:layout_width="match_parent"
                android:layout_height="164dp"
                android:src="@drawable/food"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:background="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/mypage_ImageView"
                >
                <View
                    android:id="@+id/mypage_info_view1"
                    android:layout_width="340dp"
                    android:layout_height="1dip"
                    android:layout_marginTop="16dp"
                    android:background="#ededed"
                    android:layout_centerHorizontal="true"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품             이름"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="18dp"
                    android:textSize="14sp"
                    android:id="@+id/mypage_item_name"
                    android:layout_below="@+id/mypage_info_view1"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mypage_item_name"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="18dp"
                    android:id="@+id/mypage_layout_price"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입찰가"
                        android:textSize="18sp"
                        android:textColor="#e42828"
                        />
                    <TextView
                        android:id="@+id/mypage_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:layout_marginLeft="3dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="원"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:visibility="invisible"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="("
                        android:textColor="#000000"
                        />
                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/mypage_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="0"
                        android:textColor="#000000"
                        />
                    <TextView
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="/3)"
                        android:textColor="#000000"
                        />

                </LinearLayout>
                <View
                    android:id="@+id/mypage_info_view2"
                    android:layout_below="@+id/mypage_layout_price"
                    android:layout_width="340dp"
                    android:layout_height="1dip"
                    android:layout_marginBottom="16dp"
                    android:background="#ededed"
                    android:layout_centerHorizontal="true"></View>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dip"
                    android:layout_below="@+id/mypage_info_view2"
                    android:background="#eeeeee">

                </View>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>