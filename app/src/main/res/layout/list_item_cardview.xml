<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id = "@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_margin = "4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/ImageView"
                android:src="@drawable/food"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:background="#88e7d1d1"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ImageView"
                >
                <View
                    android:layout_width="320dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="1dip"
                    android:background="#FF909090"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품이름"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="24sp"
                    android:id="@+id/item_name"
                    android:textColor="#000000"
                    android:layout_marginBottom="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:layout_below="@id/item_name"
                    android:layout_marginLeft="10dp"
                    android:textSize="30sp"
                    android:id="@+id/item_price"
                    android:textColor="#FF5E00"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남은시간"
                    android:layout_below="@id/item_price"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/remain_time"
                    android:textColor="#A6A6A6"
                    />
                <View
                    android:layout_width="320dp"
                    android:layout_height="1dip"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@+id/remain_time"
                    android:id="@+id/view"
                    android:layout_marginTop="5dp"
                    android:background="#FF909090"
                    android:layout_centerHorizontal="true"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/view"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_weight="4"
                        android:gravity="end"
                        android:id="@+id/people_su"
                        android:layout_marginTop="0dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview_join1"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        android:text="명 참여중"
                        />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>