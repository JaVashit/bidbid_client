<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:orientation="vertical"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id = "@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_margin = "4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/ImageView"
                android:src="@drawable/food"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="#ffffff"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ImageView"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="18dp"
                    android:id="@+id/like_and_share_linear">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:src="@mipmap/favorite"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="48dp"
                        android:src="@mipmap/share"/>

                </LinearLayout>
                <View
                    android:layout_width="320dp"
                    android:layout_marginBottom="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="1dip"
                    android:id="@+id/view_line1"
                    android:layout_below="@+id/like_and_share_linear"
                    android:background="#ededed"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품이름"
                    android:layout_below="@id/view_line1"
                    android:layout_marginLeft="18dp"
                    android:textSize="14sp"
                    android:id="@+id/item_name"
                    android:textColor="#000000"
                    android:layout_marginBottom="10dp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:layout_below="@id/item_name"
                    android:layout_marginLeft="18dp"
                    android:textSize="30sp"
                    android:id="@+id/item_price"
                    android:textColor="#FF5E00"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_price"
                    android:id="@+id/item_layout_remain1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남은시간"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/remain_time"
                        android:textColor="#A6A6A6"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/remain_time_hour"
                        android:textColor="#A6A6A6"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/remain_time2"
                        android:textColor="#A6A6A6"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/remain_time_min"
                        android:textColor="#A6A6A6"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/remain_time3"
                        android:textColor="#A6A6A6"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/remain_time_sec"
                        android:textColor="#A6A6A6"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="초"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/remain_time_remain3"
                        android:textColor="#A6A6A6"
                        />
                </LinearLayout>

                <View
                    android:layout_width="320dp"
                    android:layout_height="1dip"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@+id/item_layout_remain1"
                    android:id="@+id/view"
                    android:layout_marginTop="5dp"
                    android:background="#ededed"
                    android:layout_centerHorizontal="true"></View>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/item_layout_person_su"
                    android:layout_below="@+id/view"
                    >
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_toLeftOf="@id/people_su"
                        android:src="@mipmap/joinperson"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:layout_toLeftOf="@id/textview_join1"
                        android:id="@+id/people_su"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview_join1"
                        android:text="명 참여중"
                        android:layout_marginRight="18dp"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dip"
                    android:layout_below="@+id/item_layout_person_su"
                    android:background="#eeeeee">

                </View>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>




</LinearLayout>